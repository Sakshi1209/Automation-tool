{
  "manifest_version": 3,
  "name": "Universal AI Form Filler",
  "version": "3.0",
  "description": "AI-powered form filler with File Uploads.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["sample.pdf"],
      "matches": ["<all_urls>"]
    }
  ]
}